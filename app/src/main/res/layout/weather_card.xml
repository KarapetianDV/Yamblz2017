<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/card_temp"
            style="@style/Temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/card_image"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/card_image"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/card_image" />

        <TextView
            android:id="@+id/card_weather"
            style="@style/Temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/card_city"
            app:layout_constraintLeft_toRightOf="@+id/card_image"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/card_humidity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/humidity"
            app:layout_constraintLeft_toRightOf="@+id/card_image"
            android:layout_marginLeft="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/card_temp" />

        <TextView
            android:id="@+id/card_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/card_humidity_title"
            app:layout_constraintLeft_toRightOf="@+id/card_humidity_title"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/card_windspeed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/windspeed"
            app:layout_constraintLeft_toRightOf="@+id/card_humidity"
            android:layout_marginLeft="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/card_humidity_title" />

        <TextView
            android:id="@+id/card_windspeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/card_windspeed_title"
            android:layout_marginLeft="0dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/card_windspeed_title" />

        <TextView
            android:id="@+id/card_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moscow"
            app:layout_constraintLeft_toRightOf="@+id/card_image"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/card_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/card_city"
            android:layout_marginLeft="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/card_city" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>